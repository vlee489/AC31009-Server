{
    "compilerOptions": {
        "skipLibCheck": true,
        "allowJs": true,
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true,
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "lib": [ 
            "ES2020",
            "esnext",
            "esnext.asynciterable"
        ],
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES2020",
        /* Strict Type-Checking Options */
        "strictNullChecks": false,
        /* Debugging Options */
        "traceResolution": false,
        "listEmittedFiles": false,
        "listFiles": false,
        "pretty": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        /* Absolute imports */
        "baseUrl": ".",
        "paths": {
            "src/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules/**"
    ],
    "compileOnSave": false,
    "sourceMap": true
}